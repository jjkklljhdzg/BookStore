@model BookStore.Models.Order

@{
    ViewData["Title"] = "Details";
}

<h1>Детали</h1>

<div>
    <h4>Заказ</h4>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            Дата создания заказа:
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.OrderDate)
        </dd>
        <dt class = "col-sm-2">
            Количество кинг:
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.AmountOfBooks)
        </dd>
        <dt class = "col-sm-2">
            Цена:
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Price)
        </dd>
    </dl>
</div>
<div>
    <a asp-action="Edit" asp-route-id="@Model?.OrderId">Редактировать</a> |
    <a asp-action="Index">Назад к таблице</a>
</div>
